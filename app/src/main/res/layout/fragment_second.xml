<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment"
    android:background="@color/appBackground">


    <TextView
        android:id="@+id/textview_screen2_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/question_header"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/constraint_spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="35sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_spinner"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toBottomOf="@id/textview_screen2_header"
        app:layout_constraintBottom_toTopOf="@id/submit_answers">

        <RelativeLayout
            android:id="@+id/relativeLayout_forWho"
            android:layout_width="250dp"
            android:layout_height="48dp"
            app:layout_constraintBottom_toTopOf="@id/relativeLayout_age"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1"
            android:background="@color/white">
            <Spinner
                android:id="@+id/spinner_forWho"
                style="@style/Widget.AppCompat.DropDownItem.Spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout_age"
            android:layout_width="250dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toBottomOf="@id/relativeLayout_forWho"
            app:layout_constraintBottom_toTopOf="@id/relativeLayout_gender"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/white">
            <Spinner
                android:id="@+id/spinner_age"
                style="@style/Widget.AppCompat.DropDownItem.Spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout_gender"
            android:layout_width="250dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toBottomOf="@id/relativeLayout_age"
            app:layout_constraintBottom_toTopOf="@id/relativeLayout_ethnicity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/white">
            <Spinner
                android:id="@+id/spinner_gender"
                style="@style/Widget.AppCompat.DropDownItem.Spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout_ethnicity"
            android:layout_width="250dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toBottomOf="@id/relativeLayout_gender"
            app:layout_constraintBottom_toTopOf="@id/relativeLayout_category"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/white">
            <Spinner
                android:id="@+id/spinner_ethnicity"
                style="@style/Widget.AppCompat.DropDownItem.Spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout_category"
            android:layout_width="250dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toBottomOf="@id/relativeLayout_ethnicity"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/white">
            <Spinner
                android:id="@+id/spinner_category"
                style="@style/Widget.AppCompat.DropDownItem.Spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <Button
        android:id="@+id/submit_answers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enterApp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraint_spinner" />

</androidx.constraintlayout.widget.ConstraintLayout>